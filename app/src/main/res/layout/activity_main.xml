<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="@dimen/padding_medium"
    tools:context=".MainActivity">

    <!-- Titre de l'application -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textSize="@dimen/text_title"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_large" />

    <!-- Carte contenant les nombres -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="@dimen/padding_large"
        android:elevation="@dimen/card_elevation"
        android:layout_marginBottom="@dimen/margin_medium">

        <!-- Premier nombre -->
        <TextView
            android:id="@+id/tvLabelNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_number1"
            android:textSize="@dimen/text_label"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_number"
            android:textSize="@dimen/text_number"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- Deuxième nombre -->
        <TextView
            android:id="@+id/tvLabelNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_number2"
            android:textSize="@dimen/text_label"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_number"
            android:textSize="@dimen/text_number"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Instruction -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instruction"
        android:textSize="@dimen/text_instruction"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Boutons d'opérations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_large">

        <Button
            android:id="@+id/btnAddition"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_addition"
            android:textSize="@dimen/text_button"
            android:backgroundTint="@color/btn_addition"
            android:layout_marginEnd="@dimen/margin_small" />

        <Button
            android:id="@+id/btnSubtraction"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_subtraction"
            android:textSize="@dimen/text_button"
            android:backgroundTint="@color/btn_subtraction"
            android:layout_marginEnd="@dimen/margin_small" />

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_multiplication"
            android:textSize="@dimen/text_button"
            android:backgroundTint="@color/btn_multiplication" />
    </LinearLayout>

    <!-- Résultat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="@dimen/padding_large"
        android:elevation="@dimen/card_elevation"
        android:layout_marginBottom="@dimen/margin_large">

        <TextView
            android:id="@+id/tvLabelResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_result"
            android:textSize="@dimen/text_label"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_result"
            android:textSize="@dimen/text_result"
            android:textColor="@color/text_result"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bouton Générer -->
    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/btn_generate"
        android:textSize="@dimen/text_button"
        android:backgroundTint="@color/btn_generate" />

</LinearLayout>